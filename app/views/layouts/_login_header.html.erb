<div class="navbar bg-base-100">
  <div class="flex-1">
    <%= link_to 'AnimeTierList', root_path, class: "btn btn-ghost normal-case text-xl"  %>
  </div>
  <div class="flex-none">
    <%= link_to animations_path, class: "" do %>
      <i class="fa-solid fa-magnifying-glass fa-lg fa-fw"></i>
    <% end %>
    <%= link_to notifications_path, class: "" do %>
      <% if unchecked_notifications.any? %>
        <div class="relative">
        <i class="fa-regular fa-bell fa-xl fa-fw ml-4 sm:ml-6"></i>
        <i class="fa-solid fa-circle fa-sm text-primary absolute right-0 -top-0.5"></i>
        </div>
      <% else %>
        <i class="fa-regular fa-bell fa-xl fa-fw ml-4 sm:ml-6"></i>
      <% end %>
    <% end %>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar ml-3 sm:ml-6">
        <div class="w-9 h-9 bg-base-300 rounded-full">
          <%= image_tag current_user.user_image.thumb.url %>
        </div>
      </label>
      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
        <li><%= link_to "プロフィール", user_path(current_user.id) %></li>
        <li><a>Settings</a></li>
        <li><%= button_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</div>
