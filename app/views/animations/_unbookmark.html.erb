<%= turbo_frame_tag dom_id(animation, :bookmark_animations) do %>
  <%= link_to bookmark_path(current_user.bookmark.find_by(animation_id: animation.id)), class: "btn btn-neutral text-info", data: { turbo_method: :delete } do %>
    <i class="fa-solid fa-bookmark text-2xl"></i>
    <p><%= animation.bookmarks.count %></p>
  <% end %>
<% end %>