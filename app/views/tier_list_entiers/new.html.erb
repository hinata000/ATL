<div class="w-5/6 md:w-5/6  lg:w-4/6 xl:w-3/6 mx-auto">
  <%= form_with model: @tier_list_entier, url: animation_tier_list_entiers_path, local: true do |f| %>
    <%= f.hidden_field :animation_id, value: @tier_list_entier.animation_id  %>
    <h2 class="text-primary-content text-3xl title-font font-medium text-center pb-8">「<%= @animation.title %>」<br>をリストに追加</h2>
    <div class="py-10">
      <div class="mx-3">
        <%= f.range_field :tier_score, id: "range", min: "1", max: "5", value: "1", step: "1", class: "range range-primary" %>
      </div>
      <div class="w-full flex justify-between text-xs px-3 text-center">
        <span class="text-base leading-none text-green-500">C<br>tier</span>
        <span class="text-base leading-none text-yellow-300">B<br>tier</span>
        <span class="text-base leading-none text-yellow-500">A<br>tier</span>
        <span class="text-base leading-none text-yellow-600">S<br>tier</span>
        <span class="text-base leading-none text-red-500">SS<br>tier</span>
      </div>
    </div>
    <div class="py-8">
      <%= f.text_area :comment, placeholder: "レビュー無記入でも追加できます。", class: "textarea textarea-bordered textarea-lg w-full h-60" %>
    </div>
    <div>
      <%= f.label :spoiler, "コメントがネタバレになる場合はチェックを入れてください" %>
      <%= f.hidden_field :spoiler, :value => false %>
      <%= f.check_box :spoiler, { class: "checkbox checkbox-primary" }, true, false %>
    </div>
    <div class="mx-auto w-fit">
      <%= f.submit "TierListへ追加する", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>