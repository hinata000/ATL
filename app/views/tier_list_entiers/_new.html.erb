<button class="btn text-neutral-content" onclick="tier_list_entier_new_<%= animation.id %>.showModal()">全期間</button>
<dialog id="tier_list_entier_new_<%= animation.id %>" class="modal">
  <div class="modal-box">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <div>
      <%= form_with model: @tier_list_entier_new, url: animation_tier_list_entiers_path(animation), local: true do |f| %>
        <%= f.hidden_field :animation_id, value: animation.id  %>
        <h2 class="text-primary-content text-2xl title-font font-medium text-center">TierList（全期間）に追加</h2>
        <div class="py-6">
          <div class="mx-3">
            <%= f.range_field :tier_score, id: "range", min: "1", max: "5", value: "1", step: "1", class: "range range-primary" %>
          </div>
          <div class="w-full flex justify-between text-xs px-3 text-center">
            <span class="text-base leading-none text-green-500">C<br>tier</span>
            <span class="text-base leading-none text-yellow-300">B<br>tier</span>
            <span class="text-base leading-none text-yellow-500">A<br>tier</span>
            <span class="text-base leading-none text-yellow-600">S<br>tier</span>
            <span class="text-base leading-none text-red-500">SS<br>tier</span>
          </div>
        </div>
        <div class="py-2">
          <%= f.text_area :comment, placeholder: "レビュー無記入でも追加できます。", class: "textarea textarea-bordered textarea-lg w-full h-60" %>
        </div>
        <div class="py-2 text-center">
          <%= f.hidden_field :spoiler, :value => false %>
          <%= f.check_box :spoiler, { class: "checkbox checkbox-primary mr-1" }, true, false %>
          <%= f.label :spoiler, "コメントがネタバレになる場合はチェックを入れてください" %>
        </div>
        <div class="mx-auto py-2 w-fit">
          <%= f.submit "TierListへ追加する", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</dialog>