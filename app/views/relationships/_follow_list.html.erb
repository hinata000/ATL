<p class="font-medium text-base-content text-sm text-center w-full py-3" onclick="my_modal_3.showModal()">
  フォロー<br><%= @user.followings.count %>
</p>


<dialog id="my_modal_3" class="modal">
  <div class="modal-box">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <% if @user.followings.exists? %>
      <% @user.followings.each do |user| %>
        <div class="flex">
          <%= image_tag user.user_image.thumb.url %>
        </div>
      <% end %>
    <% else %>
      <p>フォローしているユーザーが存在しません。</p>
    <% end %>
  </div>
</dialog>