<%= render "devise/shared/error_messages", resource: resource %>
<section class="py-6">
  <div class="flex flex-col items-center justify-center px-3 py-8 mx-auto lg:py-0">
    <div class="w-full bg-base-200 rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h2 class="font-bold leading-tight tracking-tight text-secondary-content text-2xl text-center">ログイン</h2>
          <div class="pt-2">
            <div class="flex items-center space-x-1">
              <div class="flex-1 border-t-2 border-gray-700"></div>
              <h3 class="text-xl font-bold px-2">ゲストユーザーでログイン</h3>
              <div class="flex-1 border-b-2 border-gray-700"></div>
            </div>
            <div class="pt-6 pb-7">
              <%= link_to "ゲストログイン", users_guest_sign_in_path, class: "btn btn-neutral w-full", data: { "turbo-method": :post } %>
            </div>
          </div>
          <div class="flex items-center space-x-1">
            <div class="flex-1 border-t-2 border-gray-700"></div>
            <h3 class="text-xl font-bold px-2">メールアドレスでログイン</h3>
            <div class="flex-1 border-b-2 border-gray-700"></div>
          </div>
          <form class="space-y-4 md:space-y-6" action="#">
            <%# メールアドレス %>
            <div class="field">
              <%= f.label :email, "メールアドレス", class: "label" %>
              <%= f.email_field :email, class: "input input-bordered block w-full p-2.5", autofocus: true, autocomplete: "email", required: true %>
            </div>
            <%# パスワード %>
            <div class="field">
              <%= f.label :password, "パスワード", class: "label" %>
              <%= f.password_field :password, class: "input input-bordered block w-full p-2.5", autocomplete: "current-password", required: true %>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-start">
                <% if devise_mapping.rememberable? %>
                  <div class="flex items-center h-5">
                    <%= f.check_box :remember_me, type: "checkbox", class: "checkbox bg-neutral-content w-6 h-6 border border-base-100"%>
                  </div>
                  <div class="ml-3 text-sm">
                    <%= f.label :remember_me, "ログイン状態を保存", class: "text-base-content" %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="pb-4">
              <%= f.submit "ログイン", class: "w-full btn btn-primary" %>
            </div>
            <%= render "devise/shared/links" %>
          </form>
        </div>
      <% end %>
    </div>
  </div>
</section>