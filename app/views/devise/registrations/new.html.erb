<%= render "devise/shared/error_messages", resource: resource %>
<section class="py-1">
  <div class="flex flex-col items-center justify-center px-3 py-6 mx-auto lg:py-0">
      <div class="w-full bg-base-200 rounded-lg shadow sm:max-w-md xl:p-0">
        <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl text-center font-bold leading-tight tracking-tight text-secondary-content md:text-2xl">会員登録</h1>
              <form class="space-y-4 md:space-y-6" action="#">
                  <%# メールアドレス %>
                  <div class="field">
                    <%= f.label :email, "メールアドレス", class: "label" %>
                    <%= f.email_field :email, class: "input input-bordered block w-full p-2.5", autofocus: true, autocomplete: "email", required: true %>
                  </div>
                  <%# ユーザーネーム %>
                  <div class="field">
                    <%= f.label :user_name, "ユーザー名（15文字以内）", class: "label" %>
                    <%= f.text_field :user_name, class: "input input-bordered block w-full p-2.5", autofocus: true, required: true %>
                  </div>
                  <%# Anikomi ID %>
                  <div class="field">
                    <%= f.label :uesr_id, "ユーザーID（15文字以内）", class: "label" %>
                    <%= f.text_field :user_id, class: "input input-bordered block w-full p-2.5", autofocus: true, required: true %>
                  </div>
                  <%# パスワード %>
                  <div class="field">
                    <%= f.label :password, "パスワード（半角英数字6文字以上）", class: "label" %>
                    <%= f.password_field :password, class: "input input-bordered block w-full p-2.5", autocomplete: "new-password", required: true %>
                  </div>
                  <div class="field">
                  <%# パスワード確認 %>
                  <div class="field">
                    <%= f.label :password_confirmation, "パスワード確認", class: "label" %>
                    <%= f.password_field :password_confirmation, class: "input input-bordered block w-full p-2.5", autocomplete: "new-password", required: true %>
                  </div>
                  <%# アカウント作成 %>
                  <div class="actions py-6">
                    <%= f.submit "会員登録する", class: "w-full btn btn-primary text-primary-content px-5 py-2.5 text-center" %>
                  </div>
                  <%= render "devise/shared/links" %>
              </form>
          </div>
        <% end %>
      </div>
  </div>
</section>
