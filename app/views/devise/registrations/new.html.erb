<%= render "devise/shared/error_messages", resource: resource %>
<section class="py-6">
  <div class="flex flex-col items-center justify-center px-6 py-6 mx-auto lg:py-0">
      <div class="w-full bg-base-200 rounded-lg shadow sm:max-w-md xl:p-0">
        <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-secondary-content md:text-2xl">
                  アカウント作成
              </h1>
              <form class="space-y-4 md:space-y-6" action="#">
                  <%# ユーザーネーム %>
                  <div class="field">
                    <%= f.label :name, "ユーザーネーム", class: "label" %>
                    <%= f.text_field :name, class: "input input-bordered block w-full p-2.5", autofocus: true, placeholder: "アニコミ", required: true %>
                  </div>
                  <%# Anikomi ID %>
                  <div class="field">
                    <%= f.label :anikomi_id, "Anikomi ID", class: "label" %>
                    <%= f.text_field :anikomi_id, class: "input input-bordered block w-full p-2.5", autofocus: true, placeholder: "Anikomi", required: true %>
                  </div>
                  <%# メールアドレス %>
                  <div class="field">
                    <%= f.label :email, "メールアドレス", class: "label" %>
                    <%= f.email_field :email, class: "input input-bordered block w-full p-2.5", autofocus: true, autocomplete: "email", placeholder: "email@example.com", required: true %>
                  </div>
                  <%# パスワード %>
                  <div class="field">
                    <%= f.label :password, "パスワード", class: "label" %>
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>
                    <%= f.password_field :password, class: "input input-bordered block w-full p-2.5", autocomplete: "new-password", placeholder: "••••••••", required: true %>
                  </div>
                  <div class="field">
                  <%# パスワード確認 %>
                  <div class="field">
                    <%= f.label :password_confirmation, "パスワード確認", class: "label" %>
                    <%= f.password_field :password_confirmation, class: "input input-bordered block w-full p-2.5", autocomplete: "new-password", placeholder: "••••••••", required: true %>
                  </div>
                  <%# アカウント作成 %>
                  <div class="actions py-6">
                    <%= f.submit "登録", class: "w-full btn btn-primary text-primary-content px-5 py-2.5 text-center" %>
                  </div>
                  <%= link_to 'ログインはこちら', new_user_session_path, class: "text-base-content hover:underline" %>
              </form>
          </div>
        <% end %>
      </div>
  </div>
</section>
